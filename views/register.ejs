<!DOCTYPE html>
<html>
<head>
    <% include blocks/links.ejs %>
</head>
<body>

<% include blocks/menu.ejs %>

<div id="main">
    
    <div class="login">
        <h2>Увійти</h2>
        <form method="POST" action="/register">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <input type="username" name="username" class="form-control" placeholder="нікнейм" value = "<%= typeof username != 'undefined' ? username : '' %>">
                    </div>
                    <div class="form-group">
                        <input type="text" name="firstname" class="form-control" placeholder="ім'я" value = "<%= typeof firstname != 'undefined' ? firstname : '' %>">
                    </div>
                    <div class="form-group">
                        <input type="text" name="lastname" class="form-control" placeholder="призвіще" value = "<%= typeof lastname != 'undefined' ? lastname : '' %>">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="пароль" value = "<%= typeof password != 'undefined' ? password : '' %>">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password2" class="form-control" placeholder="повторіть пароль" value = "<%= typeof password2 != 'undefined' ? password2 : '' %>">
                    </div>
                    <button type = "submit" class = "login-button">Зареєструватись</button> 
                </div>
            </div>
        </form>
    </div>
  
    
</div>

<% include blocks/footer.ejs %>
  
<script src="/scripts/menuScript.js"></script>
    
</body>
</html>